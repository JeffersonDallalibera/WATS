# WATS Recording Configuration Sample
# Add these settings to your .env file to configure session recording

# Database Settings (existing)
DB_TYPE=postgresql
DB_SERVER=your_server
DB_DATABASE=your_database
DB_UID=your_username
DB_PWD=your_password
DB_PORT=5432

# Session Recording Settings
# Enable/disable recording functionality
RECORDING_ENABLED=true

# Automatically start recording when a connection is made
RECORDING_AUTO_START=true

# Recording mode: full_screen, rdp_window, active_window
# - full_screen: Records the entire desktop (all monitors)
# - rdp_window: Records only the RDP connection window (recommended)
# - active_window: Records the currently active window
RECORDING_MODE=rdp_window

# Directory to store recordings (default: user data dir/recordings)
# RECORDING_OUTPUT_DIR=C:/Users/YourUser/AppData/Roaming/WATS/recordings

# Recording quality settings
RECORDING_FPS=10                        # Frames per second (1-60)
RECORDING_QUALITY=23                    # H.264 quality (0-51, lower is better)
RECORDING_RESOLUTION_SCALE=1.0          # Resolution scale (0.1-2.0, 1.0 = full)

# File rotation settings
RECORDING_MAX_FILE_SIZE_MB=100          # Max file size before rotation (MB)
RECORDING_MAX_DURATION_MINUTES=30      # Max duration before rotation (minutes)

# Storage management
RECORDING_MAX_TOTAL_SIZE_GB=10.0        # Maximum total storage for recordings (GB)
RECORDING_MAX_FILE_AGE_DAYS=30          # Delete recordings older than X days
RECORDING_CLEANUP_INTERVAL_HOURS=6      # How often to run cleanup (hours)

# Log level
LOG_LEVEL=INFO